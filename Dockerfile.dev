# Development Dockerfile для Next.js

FROM node:20-alpine

WORKDIR /app

# Устанавливаем зависимости для native модулей
RUN apk add --no-cache libc6-compat openssl python3 make g++

# Копируем package файлы
COPY package*.json ./

# Копируем схему Prisma ПЕРЕД установкой
COPY prisma ./prisma/

# Устанавливаем зависимости (с postinstall для native модулей)
RUN npm ci

# Копируем остальные файлы проекта
COPY . .

# Копируем entrypoint script
COPY docker-entrypoint-dev.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint-dev.sh

# Открываем порт
EXPOSE 3000

# Используем entrypoint
ENTRYPOINT ["docker-entrypoint-dev.sh"]
CMD ["npm", "run", "dev"]
